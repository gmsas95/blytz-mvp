{
  "name": "blytz-frontend",
  "version": "2.0.0",
  "description": "Blytz Live Auction MVP Frontend",
  "type": "web",
  "build": {
    "context": ".",
    "dockerfile": "Dockerfile",
    "args": {
      "NEXT_PUBLIC_API_BASE": "https://api.blytz.app"
    }
  },
  "ports": [3000],
  "env": [
    {
      "name": "NODE_ENV",
      "value": "production"
    },
    {
      "name": "MODE",
      "value": "mock"
    },
    {
      "name": "NEXT_PUBLIC_API_BASE",
      "value": "https://api.blytz.app"
    },
    {
      "name": "NEXT_TELEMETRY_DISABLED",
      "value": "1"
    }
  ],
  "volumes": [],
  "restart": "unless-stopped",
  "labels": {
    "traefik.enable": "true",
    "traefik.http.routers.blytz-frontend.rule": "Host(`blytz.app`) || Host(`www.blytz.app`)",
    "traefik.http.routers.blytz-frontend.entrypoints": "websecure",
    "traefik.http.routers.blytz-frontend.tls.certresolver": "letsencrypt",
    "traefik.http.services.blytz-frontend.loadbalancer.server.port": "3000"
  },
  "resources": {
    "memory": "512m",
    "cpu": "0.5"
  },
  "healthcheck": {
    "test": ["CMD", "curl", "-f", "http://localhost:3000/health"],
    "interval": "30s",
    "timeout": "10s",
    "retries": 3
  }
}